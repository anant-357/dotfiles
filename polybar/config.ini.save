[colors]
background = #282828 
red = #cc241d
background-alt = #1d2021
foreground = #ebdbb2
primary = #fe8019
secondary = #fabd2f
alert = #fb4934
disabled = #a89984



[bar/mainbar]
width = 100%
height = 26pt
radius = 12

dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2pt

border-size = 1pt
border-color = #00000000

padding-left = 0
padding-right = 1

module-margin = 1

separator = "    "
separator-foreground = ${colors.disabled}

font-0 = Fira Code Nerd Font Complete Mono:size=11:style=Bold;2
font-1 = Symbols Nerd Font Mono:size=14:style=1000-em;2

modules-left = left-icon xworkspaces xwindow
modules-center = terminal browser vscode discord spotify
modules-right = pulseaudio wlan battery logout shutdown

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/terminal]
type = custom/text
content =   î•
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1
click-left = "kitty"

[module/browser]
type = custom/text
content = ï‰©
click-left = "firefox"

[module/vscode]
type = custom/text
content = ï¬
click-left = "code"

[module/discord]
type = custom/text
content = ï­®
click-left = "discord"

[module/spotify]
type = custom/text
content = ó°“‡
click-left = "spotify"

[module/left-icon]
type = custom/text
content = "    ïŒƒ"
click-left = "konsole"


[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/date]
type = internal/date
interval = 1

date = %H:%M
date-alt = %Y-%m-%d %H:%M:%S

label = %date%
label-foreground = ${colors.primary}


[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "ï€¨ "
;format-volume-prefix-foreground = ${colors.secondary}
format-volume = <label-volume>

label-volume = %percentage%%

label-muted = muted
label-muted-foreground = ${colors.disabled}

[network-base]
type = internal/network
interval = 3
format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}%ifname%%{F#707880} disconnected

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected =  %essid% 
ramp-signal-0 = 
ramp-signal-1 = ğŸ˜ 
ramp-signal-2 = ğŸ˜’
ramp-signal-3 = ğŸ˜Š
ramp-signal-4 = ğŸ˜ƒ
ramp-signal-5 = ğŸ˜ˆ

[module/eth]
inherit = network-base
interface-type = wired
label-connected = %{F#F0C674}%ifname%%{F-} %local_ip%

[module/battery]

[module/workspaces-label]
type = custom/text
content = "  Workspaces  > "

[module/logout]
type= custom/text
content = "ó°­‘ "
click-left = "pkill awesome"

[module/shutdown]
type= custom/text
content = "ó°¥  "
click-left = "shutdown now --poweroff"

[module/battery]
	type = internal/battery
	full-at = 99
	low-at = 15
	battery = BAT1
adapter = ADP1
poll-interval = 5
format-charging = <animation-charging> <label-charging>
format-discharging =<ramp-capacity> <label-discharging>
label-charging = %percentage%%
label-full = ï’ %percentage%%
label-low = ï–! %percentage%%
label-discharging = %percentage%%
animation-charging-4 = ó°‚…
animation-charging-0 = ï–…
